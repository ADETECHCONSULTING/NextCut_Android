<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- no title bar -->
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- no title bar and fullscreen -->
    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Nextcut.CollapsingToolbar" parent="">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Nextcut.Logo</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">124dp</item>
        <item name="expandedTitleMarginTop">140dp</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Nextcut.Logo</item>
        <item name="scrimVisibleHeightTrigger">140dp</item>
    </style>

    <style name="Widget.Nextcut.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">12dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Nextcut.Logo</item>
    </style>

    <style name="Base.TextAppearance.Nextcut.Logo" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Nextcut.Logo" parent="Base.TextAppearance.Nextcut.Logo">
        <item name="android:letterSpacing">0.20</item>
    </style>

    <style name="Widget.Shrine.CollapsingToolbarImage" parent="">
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ThemeOverlay.Nextcut.BottomNavigation" parent="">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="Widget.Nextcut.CollapsingToolbarContent" parent="">
        <item name="android:layout_marginTop">160dp</item>
        <item name="android:layout_marginLeft">124dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- textviews styles -->
    <style name="TextViewBrand" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle" parent="RobotoRegular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewSubTitle" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewSubTitleWhite" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewPrice" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewHeader" parent="RobotoThin">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorBlackMediumEmphasis</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewContentLogin" parent="RobotoThin">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlackMediumEmphasis</item>
    </style>

    <style name="TextViewContent" parent="RobotoThin">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorBlackMediumEmphasis</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Fonts -->
    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontStyle">normal</item>
    </style>

    <style name="RobotoThin">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontStyle">italic</item>
    </style>


    <!-- Rating bar style -->
    <style name="TimeRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layerlist</item>
        <item name="colorControlNormal">@color/colorBlackDisabled</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
