<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- no title bar -->
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- no title bar and fullscreen -->
    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- textviews styles -->
    <style name="TextViewBrand" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle" parent="RobotoRegular">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewSubTitle" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewContent" parent="RobotoThin">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorBlackMediumEmphasis</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Fonts -->
    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontStyle">normal</item>
    </style>

    <style name="RobotoThin">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontStyle">italic</item>
    </style>



    <!-- Rating bar style -->
    <style name="TimeRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layerlist</item>
        <item name="colorControlNormal">@color/colorBlackDisabled</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
